{
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "js", "node"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules"]
}